<resources><!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"><!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAuthorStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/paddingSomeThing</item>
        <item name="android:textSize">@dimen/textSizeAuthor</item>
    </style>

    <style name="TextHeadStyle">
        <item name="android:textColor">@color/colorTextHead</item>
        <item name="android:textSize">@dimen/textSizeAuthor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorMenuArrow</item>
    </style>
</resources>
