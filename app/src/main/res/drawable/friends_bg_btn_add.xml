<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <corners android:radius="3dp" />
        <solid android:color="@color/friendsColorPrimaryDark" />
        <stroke
            android:width="1.5dp"
            android:color="@color/friendsColorBorder" />
    </shape>
</item>
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <corners android:radius="3dp" />
        <solid android:color="@color/friendsColorPrimary" />
        <stroke
            android:width="1.5dp"
            android:color="@color/friendsColorBorder" />
    </shape>
</item>
</selector>
