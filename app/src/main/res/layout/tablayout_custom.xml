<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <vn.asiantech.internship.myultils.MyCustomTab
        android:id="@+id/myView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_canvas_height"
        android:background="@android:color/transparent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgTabIcon"
        android:layout_width="@dimen/tab_icon_size"
        android:layout_height="@dimen/tab_icon_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/tab_canvas_margin"
        android:background="@android:color/white"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_overlay="true"
        app:civ_border_width="@dimen/tab_canvas_boder" />

    <TextView
        android:id="@+id/tvTabTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_height"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:padding="@dimen/tab_text_view_padding"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/tab_text_size" />
</LinearLayout>
