<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/main_layout.padding">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/imgDisk"
        android:layout_width="@dimen/image_disk_size"
        android:layout_height="@dimen/image_disk_size"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:src="@drawable/bg_disk" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_default"
            android:textColor="@color/colorAccent" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_default"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_margin_bigger"
        android:orientation="horizontal"
        android:padding="@dimen/padding_margin_default">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgShuffle"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:contentDescription="@null"
            android:src="@drawable/ic_shuffle_grey_500_36dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgPrevious"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:contentDescription="@null"
            android:src="@drawable/ic_skip_previous_red_a700_36dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:contentDescription="@null"
            android:src="@drawable/ic_play_circle_outline_red_a700_36dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:contentDescription="@null"
            android:src="@drawable/ic_skip_next_red_a700_36dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgReplay"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:contentDescription="@null"
            android:src="@drawable/ic_replay_grey_500_36dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
