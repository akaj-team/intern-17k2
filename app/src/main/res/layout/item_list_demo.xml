<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contentDescription="@string/image.description.recyclerView"
        android:src="@mipmap/ic_person" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/recyclerView.linearlayout_padding"
            android:layout_marginStart="@dimen/recyclerView.linearlayout_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycleview.textview.name" />

            <TextView
                android:id="@+id/tvYourName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recyclerView.linearlayout_padding"
                android:layout_marginStart="@dimen/recyclerView.linearlayout_padding"/>
        </LinearLayout>
</LinearLayout>
