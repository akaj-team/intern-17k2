<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:paddingEnd="@dimen/padding_margin_default"
    android:paddingLeft="@dimen/chat_item_padding"
    android:paddingRight="@dimen/padding_margin_default"
    android:paddingStart="@dimen/chat_item_padding"
    android:paddingTop="@dimen/padding_margin_default">

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sent"
        android:padding="@dimen/chat_text_padding"
        android:textSize="@dimen/text_size_default" />
</LinearLayout>