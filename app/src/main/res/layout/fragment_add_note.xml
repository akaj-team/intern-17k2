<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgNotePicture"
        android:layout_width="@dimen/note_image_size"
        android:layout_height="@dimen/note_image_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_margin_default"
        android:contentDescription="@null"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edtNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_default"
        android:background="@android:color/white"
        android:hint="@string/note_hint_title"
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/padding_margin_default"
        android:textSize="@dimen/text_size_default" />

    <EditText
        android:id="@+id/edtNoteContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_default"
        android:background="@android:color/white"
        android:hint="@string/note_hint_content"
        android:inputType="textMultiLine"
        android:padding="@dimen/padding_margin_default"
        android:textSize="@dimen/text_size_default" />
</LinearLayout>
