<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ll.item_list_result.layout_height">

    <TextView
        android:id="@+id/tvQuestionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/textview.questionResult.layout_marginStart"
        android:padding="@dimen/imageview.result.padding"
        android:textSize="@dimen/textview.QuestionItem.textSize"
        tools:text="Question" />

    <ImageView
        android:id="@+id/imgResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/imageview.result.layout_marginStart"
        android:padding="@dimen/imageview.result.padding"
        android:src="@mipmap/ic_cancel" />
</LinearLayout>
