<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorDark"
    app:cardCornerRadius="@dimen/feed.layout_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/feed.layout_padding">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFeeder"
                android:layout_width="@dimen/item.icon_size"
                android:layout_height="@dimen/item.icon_size"
                android:src="@drawable/ic_troll"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_overlay="true"
                app:civ_border_width="@dimen/header.image_border_weight" />

            <TextView
                android:id="@+id/tvFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item.textview_margin"
                android:layout_marginStart="@dimen/item.textview_margin"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                tools:text="Hello world" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:background="#ddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/feed.viewpager_height"
            android:layout_margin="@dimen/activity2.layout_padding" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item.textview_margin"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            tools:text="Hello world" />
    </LinearLayout>
</android.support.v7.widget.CardView>
