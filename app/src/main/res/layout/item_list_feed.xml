<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview.layout_height.item_feed"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview.textview.laayout_height.border"
        android:background="@color/cardview.textview.background.border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview.ll.layout_height.feed">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/cardview.imageview.layout_height.user"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardview.textview.marginleft.user"
            android:textSize="@dimen/textview.textsize.user" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerFeed"
        android:layout_width="@dimen/cardview.viewpager.layout_width.feed"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/cardview.viewpager.layout_marginBottom.feed"
        android:layout_marginTop="@dimen/cardview.viewpager.layout_marginTop.feed" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cardview.textview.marginleft.description"
        android:layout_marginTop="@dimen/cardview.textview.marginTop.description"
        android:textSize="@dimen/textview.textSize.description_information_feed" />
</android.support.v7.widget.CardView>
