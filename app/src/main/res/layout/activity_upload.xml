<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/colorDark"
    android:padding="@dimen/activity.toolbar.margin">

    <ImageView
        android:id="@+id/imgImageUpload"
        android:layout_width="@dimen/detail.image.size"
        android:layout_height="@dimen/detail.image.size"
        android:contentDescription="@null" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity.content.margin"
        android:text="@string/button.upload" />
</LinearLayout>
