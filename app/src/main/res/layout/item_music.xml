<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlContainer"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/bg_music">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgThumb"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/textview.text.description"
        android:padding="5dp"
        tools:src="@drawable/ic_two" />

    <TextView
        android:id="@+id/tvSongName"
        style="@style/TextHeadMusicStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgThumb"
        android:layout_toRightOf="@id/imgThumb"
        tools:text="Cau 1" />

    <TextView
        android:id="@+id/tvSingerName"

        style="@style/StyleTextMusicSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSongName"
        android:layout_toEndOf="@id/imgThumb"
        android:layout_toRightOf="@id/imgThumb"
        tools:text="Cau 1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark" />
</RelativeLayout>
