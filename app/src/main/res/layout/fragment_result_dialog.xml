<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.asiantech.internship.ui.question.QuestionDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/question.dialog.textview.padding"
        android:text="@string/question.dialog.result.title"
        android:textSize="@dimen/question.dialog.textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDialogTitle"
        android:gravity="center">

        <Button
            android:id="@+id/btnResultCancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/question.dialog.cancel" />

        <Button
            android:id="@+id/btnResultOK"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/question.dialog.ok" />
    </LinearLayout>
</RelativeLayout>
