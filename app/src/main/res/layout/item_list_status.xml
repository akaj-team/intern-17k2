<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/activity2.layout_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgFeed"
            android:layout_width="@dimen/item.icon_size"
            android:layout_height="@dimen/item.icon_size"
            android:src="@drawable/ic_troll"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_overlay="true"
            app:civ_border_width="@dimen/header.image_border_weight" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item.textview_margin"
            android:layout_marginStart="@dimen/item.textview_margin"
            android:background="@color/colorLight"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

</android.support.v7.widget.CardView>
