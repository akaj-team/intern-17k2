<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_margin_super_small"
    app:cardElevation="@dimen/cardMaxElevation"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgSongIcon"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height"
            android:layout_margin="@dimen/padding_margin_small"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tvSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_bigger"
            android:layout_marginStart="@dimen/padding_margin_bigger"
            android:layout_toEndOf="@+id/imgSongIcon"
            android:layout_toRightOf="@+id/imgSongIcon"
            android:textSize="@dimen/text_size_default" />

        <TextView
            android:id="@+id/tvSingerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSongName"
            android:layout_marginLeft="@dimen/padding_margin_bigger"
            android:layout_marginStart="@dimen/padding_margin_bigger"
            android:layout_marginTop="@dimen/padding_margin_default"
            android:layout_toEndOf="@+id/imgSongIcon"
            android:layout_toRightOf="@+id/imgSongIcon"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
