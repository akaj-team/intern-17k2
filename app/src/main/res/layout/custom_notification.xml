<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgNotifiMusic"
        android:background="@color/colorPrimary"
        android:layout_width="@dimen/header.image_size"
        android:layout_height="@dimen/header.image_size"
        android:contentDescription="@string/bai20" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item.layout_margin"
        android:layout_marginStart="@dimen/item.layout_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNotifiSongName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/tvNotifiSinger"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnNotifiPrev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tab.viewpager.padding"
                android:layout_marginRight="@dimen/tab.viewpager.padding"
                android:background="@drawable/bg_button_previous"
                android:contentDescription="@string/bai20" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <ImageButton
                android:id="@+id/imgBtnNotifiPlay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tab.viewpager.padding"
                android:layout_marginRight="@dimen/tab.viewpager.padding"
                android:background="@drawable/bg_button_pause"
                android:contentDescription="@string/bai20" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlack" />

            <ImageButton
                android:id="@+id/imgBtnNotifiNext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tab.viewpager.padding"
                android:layout_marginRight="@dimen/tab.viewpager.padding"
                android:background="@drawable/bg_button_next"
                android:contentDescription="@string/bai20" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
