<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgNotifiMusic"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
        android:contentDescription="@null"
        android:gravity="center" />

    <ImageView
        android:id="@+id/imgSmallIconMusic"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
        android:background="@mipmap/ic_launcher"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/status_bar_button_info_container_padding_left"
        android:paddingRight="@dimen/status_bar_button_info_container_padding_left">

        <TextView
            android:id="@+id/tvNotifiSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNotifiSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnNotifiPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_play" />

    <ImageButton
        android:id="@+id/imgBtnNotifiNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_next"
        android:src="@drawable/apollo_holo_dark_next" />

    <ImageButton
        android:id="@+id/imgBtnNotifiExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/apollo_holo_dark_notifiation_bar_collapse" />

</LinearLayout>
