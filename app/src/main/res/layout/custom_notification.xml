<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgNotificationMusic"
        android:layout_width="@dimen/status.bar.album.art"
        android:layout_height="@dimen/status.bar.album.art"
        android:contentDescription="@null"
        android:gravity="center" />

    <ImageView
        android:id="@+id/imgSmallIconMusic"
        android:layout_width="@dimen/status.bar.album.art"
        android:layout_height="@dimen/status.bar.album.art"
        android:background="@mipmap/ic_launcher"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/status.bar.button.info.container.padding.left"
        android:paddingRight="@dimen/status.bar.button.info.container.padding.left">

        <TextView
            android:id="@+id/tvNotificationSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text.size.medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNotificationSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnNotificationPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:contentDescription="@string/cd_play" />

    <ImageButton
        android:id="@+id/imgBtnNotificationNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:contentDescription="@string/cd_next"
        android:src="@drawable/ic_apollo_holo_dark_next" />

    <ImageButton
        android:id="@+id/imgBtnNotificationExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:contentDescription="@null"
        android:src="@drawable/ic_apollo_holo_dark_notifiation_bar_collapse" />

</LinearLayout>
