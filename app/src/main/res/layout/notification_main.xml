<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="@dimen/padding_margin_default"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:id="@+id/tvSingerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="@dimen/padding_margin_default"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_default" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgPrevious"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:layout_gravity="bottom"
            android:contentDescription="@null"
            android:src="@drawable/ic_skip_previous_red_a700_36dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:layout_gravity="bottom"
            android:contentDescription="@null"
            android:src="@drawable/ic_play_circle_outline_red_a700_36dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:layout_gravity="bottom"
            android:contentDescription="@null"
            android:src="@drawable/ic_skip_next_red_a700_36dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imgTurnOff"
            android:layout_width="@dimen/image_action_size"
            android:layout_height="@dimen/image_action_size"
            android:layout_gravity="bottom"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_red_700_48dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
