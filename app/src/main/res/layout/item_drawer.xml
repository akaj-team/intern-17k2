<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview.item.height"
        android:layout_margin="@dimen/textview.item.margin"
        android:gravity="start"
        android:textColor="@color/textview.text.color"
        android:textSize="@dimen/textview.item.textsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/view.margin"
        android:background="@color/view.divider.color" />
</LinearLayout>
