<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@mipmap/bg_head_drawer">

    <TextView
        style="@style/TextAuthorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_author"
        android:id="@+id/tvAuthorName"
        app:layout_constraintBottom_toBottomOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/avatarHeight"
        android:layout_height="@dimen/avatarHeight"
        app:layout_constraintBottom_toTopOf="@id/tvAuthorName"
        android:paddingLeft="@dimen/paddingSomeThing"
        android:src="@mipmap/ic_avatar" />
</android.support.constraint.ConstraintLayout>