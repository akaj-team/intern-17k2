<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationbg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notification_expanded_height"
    android:background="@color/colorDark">

    <ImageView
        android:id="@+id/imgNotifiMusic"
        android:layout_width="@dimen/notification_expanded_height"
        android:layout_height="@dimen/notification_expanded_height"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imgNotifiMusic"
        android:divider="?android:listDivider"
        android:dividerPadding="12.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageButton
            android:id="@+id/imgBtnNotifiPrev"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@null"
            android:padding="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/apollo_holo_dark_prev" />

        <ImageButton
            android:id="@+id/imgBtnNotifiPlay"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@null"
            android:padding="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/apollo_holo_dark_play" />

        <ImageButton
            android:id="@+id/imgBtnNotifiNext"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/play_controls_notification"
            android:layout_weight="1.0"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@null"
            android:padding="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/apollo_holo_dark_next" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1.0px"
        android:layout_above="@+id/buttons"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imgNotifiMusic"
        android:background="?android:dividerHorizontal"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/imgBtnNotifiExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@null"
        android:padding="8.0dip"
        android:src="@drawable/apollo_holo_dark_notifiation_bar_collapse" />

    <LinearLayout
        android:id="@+id/textarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/imgBtnNotifiExit"
        android:layout_toRightOf="@+id/imgNotifiMusic"
        android:orientation="vertical"
        android:paddingLeft="@dimen/notification_padding"
        android:paddingRight="@dimen/notification_padding"
        android:paddingTop="@dimen/notification_padding">

        <TextView
            android:id="@+id/tvNotifiSong"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:focusable="true"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvNotifiSinger"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:maxLines="1" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal" />
    </LinearLayout>
</RelativeLayout>
