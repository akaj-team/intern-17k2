<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/relativeLayout.chat.layout_marginnTop">

    <TextView
        android:id="@+id/tvChat1"
        android:layout_width="@dimen/textview.chat.layout_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/textview.chat1.layout_mmarginStart"
        android:background="@drawable/chat1"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvChat2"
        android:layout_width="@dimen/textview.chat.layout_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/textview.chat1.layout_mmarginStart"
        android:background="@drawable/chat2"
        android:visibility="invisible" />
</RelativeLayout>
