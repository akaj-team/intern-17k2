<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/recyclerView.linearlayout_margin_top_bottom"
    android:layout_marginLeft="@dimen/recyclerView.linearlayout_margin_left_right"
    android:layout_marginRight="@dimen/recyclerView.linearlayout_margin_left_right"
    android:layout_marginTop="@dimen/recyclerView.linearlayout_margin_top_bottom"
    android:background="@drawable/bg_item_list_friend"
    android:gravity="center"
    android:padding="@dimen/recyclerView.linearlayout_padding">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contentDescription="@string/image.description.recyclerView"
        android:src="@mipmap/ic_person1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/recyclerView.linearlayout_height"
        android:layout_marginLeft="@dimen/recyclerView.linearlayout_margin_left_right"
        android:layout_marginStart="@dimen/recyclerView.linearlayout_margin_left_right"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycleview.textview.name" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recyclerView.textview_margin_left"
                android:layout_marginStart="@dimen/recyclerView.textview_margin_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recyclerView.textview_margin_left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycleview.textview.description" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recyclerView.textview_margin_left"
                android:layout_marginStart="@dimen/recyclerView.textview_margin_left" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnFriend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recyclerView.textview_margin_left"
        android:layout_marginStart="@dimen/recyclerView.textview_margin_left"
        android:layout_weight="2"
        android:contentDescription="@string/image.description.recyclerView"
        android:textAllCaps="false"
        android:textColor="@color/colorWhiteRecyclerView" />
</LinearLayout>
