<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.asiantech.internship.day20.ui.MusicActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarMusic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity.toolbar.height"
        android:background="@drawable/bg_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnEmotionMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:src="@drawable/ic_cloud_circle_light_blue_600_48dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/feed.item.viewpager.button.size"
                android:paddingRight="@dimen/feed.item.viewpager.button.size"
                android:text="@string/music_title"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/result.item.text.size" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item.layout.padding" />

    <FrameLayout
        android:id="@+id/frContainerMusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>
