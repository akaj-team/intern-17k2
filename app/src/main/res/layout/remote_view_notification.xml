<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutMusic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/textview.text.description"
        android:padding="10dp"
        android:src="@drawable/ic_avatar" />

    <LinearLayout
        android:id="@+id/lnOption"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPause"
            style="@style/StyleTextMusic"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:contentDescription="@string/textview.text.description"
            android:gravity="center_horizontal"
            android:src="@drawable/vector_pause" />

        <ImageView
            android:id="@+id/imgNext"
            style="@style/StyleTextMusic"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:contentDescription="@string/textview.text.description"
            android:gravity="center_horizontal"
            android:src="@drawable/vector_skip_next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnShowName"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/imgAvatar"
        android:layout_toLeftOf="@id/lnOption"
        android:layout_toRightOf="@id/imgAvatar"
        android:layout_toStartOf="@id/lnOption"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tvSongName"
            style="@style/TextHeadMusicStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Treat you better" />

        <TextView
            android:id="@+id/tvSongSingerName"
            style="@style/TextViewStyleNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Taylor Switch" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgAvatar"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/paddingSomeThing">

        <TextView
            android:id="@+id/tvCurrentTime"
            style="@style/TextViewStyleNotification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            tools:text="03:20" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="8"
            android:background="@color/colorAccent"
            android:progress="0" />

        <TextView
            android:id="@+id/tvDurationTime"
            style="@style/TextViewStyleNotification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            tools:text="01:10" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgClose"
        style="@style/StyleTextMusic"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/textview.text.description"
        android:src="@drawable/vector_close" />
</RelativeLayout>
