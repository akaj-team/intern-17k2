<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item.background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/recyclerview.padding"
    android:paddingTop="@dimen/recyclerview.padding">

    <TextView
        android:id="@+id/tvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/navigation.header.padding"
        android:textColor="@color/white"
        android:textSize="@dimen/textview.size.name"
        tools:text="item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line.height"
        android:background="@color/white" />
</LinearLayout>
