<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview.padding"
    app:cardCornerRadius="@dimen/cardview.radius"
    app:cardElevation="@dimen/cardview.elevation">

    <LinearLayout
        android:id="@+id/llItemSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/cardview.padding">

        <ImageView
            android:id="@+id/imgArtist"
            android:layout_width="@dimen/cardview.imageview.size"
            android:layout_height="@dimen/cardview.imageview.size"
            android:contentDescription="@null"
            android:src="@drawable/ic_music" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/cardview.padding"
            android:paddingStart="@dimen/cardview.padding">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/red"
                android:textSize="@dimen/textview.size" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
