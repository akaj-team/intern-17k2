<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item.cardView.padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/item.imageView.padding"
            android:src="@drawable/img_autumn" />

        <TextView
            android:id="@+id/tvFriendName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/feed.item.padding"
            android:layout_marginStart="@dimen/feed.item.padding"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:padding="@dimen/item.textView.padding"
            android:textSize="@dimen/header.name.text.size" />

        <Button
            android:id="@+id/btnAddFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item.button.margin"
            android:background="@drawable/bg_friend_button"
            android:drawableLeft="@drawable/ic_friend_add_button"
            android:drawablePadding="@dimen/item.imageView.padding"
            android:drawableStart="@drawable/ic_friend_add_button"
            android:paddingLeft="@dimen/item.button.padding"
            android:paddingRight="@dimen/item.button.padding"
            android:text="@string/friendFragment_button_friend_add"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</android.support.v7.widget.CardView>
