<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/friendsColorPrimary"
        android:paddingTop="@dimen/paddingSomeThings"
        android:paddingLeft="@dimen/paddingSomeThings"
        android:paddingBottom="@dimen/paddingSomeThings">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/heightImageViewFriends"
            android:layout_height="@dimen/heightImageViewFriends"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:src="@mipmap/ic_avatar" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/ButtonAddStyle"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginSomeThings"
            android:layout_weight="3"
            android:stateListAnimator="@null"
            android:text="@string/button.text.add" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginSomeThings"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_toLeftOf="@id/btnAdd"
            android:id="@+id/lnParent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingSomeThings"
                android:text="@string/textview.text.user_name" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingSomeThings"
                android:text="@string/textview.text.description" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/friendsColorPrimaryDark"
            android:layout_below="@id/lnParent"
            android:layout_toRightOf="@id/imgAvatar"/>
    </RelativeLayout>
</RelativeLayout>
