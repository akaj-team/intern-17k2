<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".day7.ex2.ui.MainActivity">

    <fragment
        android:id="@+id/fragmentFirst"
        android:name="vn.asiantech.internship.day7.ex2.ui.FirstFragment"
        android:layout_width="@dimen/fragment.layout_width"
        android:layout_height="@dimen/fragment.layout_height.first"
        android:layout_marginBottom="@dimen/fragment.layout_marginBottom"
        android:layout_marginLeft="@dimen/fragment.layout_marginLeft"
        android:layout_marginTop="@dimen/fragment.layout_marginTop"
        tools:layout="@layout/fragment_1" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/button.layout_marginLeft.ok"
        android:gravity="center"
        android:text="@string/button.text.ok" />

    <fragment
        android:id="@+id/fragmentSecond"
        android:name="vn.asiantech.internship.day7.ex2.ui.SecondFragment"
        android:layout_width="@dimen/fragment.layout_width"
        android:layout_height="@dimen/fragment.layout_height.second"
        android:layout_marginLeft="@dimen/fragment.layout_marginLeft"
        android:layout_marginTop="@dimen/fragment.layout_marginTop"
        tools:layout="@layout/fragment_2" />
</LinearLayout>