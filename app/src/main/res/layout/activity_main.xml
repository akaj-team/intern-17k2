<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dlContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlContent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlHead"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="top"
            android:minHeight="?attr/actionBarSize"
            android:titleMarginTop="15dp"
            app:layout_collapseMode="pin">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <TextView
                android:id="@+id/txtHead"
                style="@style/TextHeadStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/toolbar"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:text="@string/app_name" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rlHead"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/sizeLarge"
            android:textStyle="bold" />
    </RelativeLayout>

    <fragment
        android:name="vn.asiantech.internship.views.DrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentDrawer"
        android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>
