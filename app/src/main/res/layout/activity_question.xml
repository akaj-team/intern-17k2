<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.asiantech.internship.day15.ui.QuestionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarTest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity.toolbar.height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/item.layout.padding">

            <Button
                android:id="@+id/btnPrev"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:text="@string/question_previous"
                android:textColor="@color/colorBlack"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvQuestionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center_horizontal"
                android:text="@string/result_activity_title"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/result.item.text.size" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:text="@string/question_next"
                android:textColor="@color/colorBlack" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header.layout.margin" />

    <FrameLayout
        android:id="@+id/frContainerQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>
