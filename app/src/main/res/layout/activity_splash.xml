<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/fragment_layout" />

    <Button
        android:id="@+id/btnDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFragment"
        android:layout_centerHorizontal="true"
        android:text="@string/drawer_layout" />

    <Button
        android:id="@+id/btnExDay7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDrawer"
        android:layout_centerHorizontal="true"
        android:text="@string/ex_day_7" />

    <Button
        android:id="@+id/btnExday9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExDay7"
        android:layout_centerHorizontal="true"
        android:text="@string/ex_day_9" />

    <Button
        android:id="@+id/btnExday11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExday9"
        android:layout_centerHorizontal="true"
        android:text="@string/ex_day_11" />

    <Button
        android:id="@+id/btnExday13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExday11"
        android:layout_centerHorizontal="true"
        android:text="@string/ex_day_13" />

    <Button
        android:id="@+id/btnExday15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExday13"
        android:layout_centerHorizontal="true"
        android:text="@string/ex_day_15" />

    <Button
        android:id="@+id/btnExday16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExday15"
        android:layout_centerHorizontal="true"
        android:text="@string/ex_day_16" />

    <Button
        android:id="@+id/btnExday24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnExday16"
        android:layout_centerHorizontal="true"
        android:text="@string/ex_day_24" />
</RelativeLayout>
