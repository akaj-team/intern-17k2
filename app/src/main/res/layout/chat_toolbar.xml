<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat.toolbar.height"
    android:background="@color/colorGrey"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image.description"
        android:src="@drawable/ic_keyboard_backspace_red_900_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat.button.back"
        android:textColor="@color/colorRed" />

    <TextView
        android:id="@+id/tvReciever"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/chat.toolbar.title"
        android:textColor="@color/colorRed" />
</LinearLayout>
