<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/relativelayout.layout_height">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/imageview.layout_marginStart"
        android:contentDescription="@string/imageview.description"
        android:src="@drawable/ic_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/textview.name.layout_marginStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/linearlayout.layout_marginEnd"
            android:gravity="end"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/button.add.layout_marginEnd"
                android:text="@string/button.text.add" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnFriends"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button.friends.layout_height"
        android:layout_marginStart="@dimen/button.friends.layout_margin_Start"
        android:layout_marginTop="@dimen/button.friends.layout_marginTop"
        android:background="@color/btn.friends"
        android:drawableStart="@drawable/ic_check"
        android:text="@string/button.text.friends"
        android:textColor="@color/button.friends"
        android:visibility="invisible" />

</RelativeLayout>
