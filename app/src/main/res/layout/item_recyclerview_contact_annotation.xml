<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/contact.relativeLayout.margin_left_right_top"
    android:layout_marginRight="@dimen/contact.relativeLayout.margin_left_right_top"
    android:layout_marginTop="@dimen/contact.relativeLayout.margin_left_right_top"
    android:background="@drawable/bg_item_recyclerview_annotation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/contact.linearLayout.padding">

        <TextView
            android:id="@+id/tvContactNameAnnotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/contact.name.size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContactMailAnnotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/contact.mail.marginleft"
            android:layout_marginStart="@dimen/contact.mail.marginleft"
            android:textColor="@color/colorBack"
            android:textSize="@dimen/contact.mail.size"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvContactPhoneAnnotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/contact.mail.marginleft"
            android:layout_marginStart="@dimen/contact.mail.marginleft"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/contact.mail.size"
            android:textStyle="italic" />
    </LinearLayout>
</android.support.v7.widget.CardView>
