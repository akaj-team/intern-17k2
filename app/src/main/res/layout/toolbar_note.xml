<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbarNote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolbar.note.background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview.information_title.text"
        android:textColor="@color/colorEditInformation"
        android:textSize="@dimen/textview.editInformation.textSize" />

    <ImageView
        android:id="@+id/imgAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/imageview.add.layout_marginLeft"
        android:contentDescription="@null"
        android:src="@mipmap/ic_add" />
</android.support.v7.widget.Toolbar>
