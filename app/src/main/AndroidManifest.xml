<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.asiantech.internship">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:noHistory="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="recyclerview.FriendActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".demo.RecyclerViewActivity" />
        <activity android:name=".fragment.SendActivity" />
        <activity android:name=".notesqlite.NoteActivity" />
        <activity android:name=".feed.FeedActivity" />
        <activity android:name=".test.ResultActivity" />
        <activity android:name=".music.MusicActivity" />
        <activity android:name=".tablayout.ImageActivity" />
        <activity android:name=".ninepath.ChatActivity" />
        <activity android:name=".test.TestActivity" />

        <service
            android:name=".music.MusicService"
            android:enabled="true" />
    </application>
</manifest>
